#!/usr/bin/env bash

function installmodule() {
	if npm list -g "${@}" | grep "empty" > /dev/null; then
		npm install -g "${@}"
	else
		echo "${@} is already installed."
	fi
}

if [ $(uname -s) = "Darwin" ]; then
	installmodule alfred-npms
	installmodule alfred-fkill
fi

installmodule alex
installmodule elm
installmodule elm-format@exp
installmodule elm-oracle
installmodule elm-test
installmodule feathers-cli
installmodule fixjson
installmodule gulp-cli
installmodule imageoptim-cli
installmodule jsonlint
installmodule localtunnel
installmodule ndb
installmodule ngrok
installmodule nodemon
installmodule neovim
installmodule prettier
installmodule prettier-plugin-svelte
installmodule server
installmodule typescript
installmodule yo

# language servers
installmodule vscode-css-languageserver-bin
installmodule vscode-html-languageserver-bin
installmodule dockerfile-language-server-nodejs
installmodule typescript-language-server
installmodule vscode-json-languageserver
installmodule pyright
installmodule intelephense
installmodule bash-language-server
installmodule tsserver
