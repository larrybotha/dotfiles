#!/usr/bin/env bash

# Once python is installed, via homebrew, we have pip and Distribute. Let's ensure
# we can work in virtual environments, too
# http://docs.python-guide.org/en/latest/starting/install/osx/
pip install --user virtualenv

# linting
# - used by ALE
pip install --user yamllint

# add python support to neovim
python2 -m pip install --user --upgrade pynvim
python3 -m pip install --user --upgrade pynvim

# environments
pip install --user pipenv

# auto formatting
pip install --user black

# autoformatting / autoimporting
pip install --user isort
pip install --user autoimport

# generate requirements.txt
pip install --user pipreqs

# better REPL
pip install --user ptpython
