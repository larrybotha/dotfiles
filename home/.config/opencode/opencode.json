{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "aura",
  "mcp": {
    "lsp-mcp-server": {
      "type": "local",
      "command": [
        "mcp-language-server"
      ],
      "enabled": false
    },
    "vectorcode-mcp-server": {
      "type": "local",
      "command": [
        "vectorcode-mcp-server"
      ],
      "enabled": false
    },
    "dash-api": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/Kapeli/dash-mcp-server.git",
        "dash-mcp-server"
      ],
      "enabled": true
    }
  },
  "keybinds": {
    "input_newline": "shift+enter"
  }
}
