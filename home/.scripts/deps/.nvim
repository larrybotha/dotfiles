#!/usr/bin/env bash

if ! type -p nvim &>/dev/null; then
  echo "Please install Neovim and run this script again"

  exit 1
fi

brew reinstall neovim

commands=(
 "+Lazy! sync" # update plugins
 "+TSUpdate" # update treesitter parsers
)

for x in "${commands[@]}"; do
  nvim --headless "$x" +qa
done
